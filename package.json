{
    "name": "lifweb",
    "version": "1.0.0",
    "description": "Supports de LIFWEB (projet Node.js pour le tooling)",
    "scripts": {
      "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
      "type": "git",
      "url": "https://forge.univ-lyon1.fr/lifweb/lifweb.pages.univ-lyon1.fr"
    },
    "author": {
      "email": "romuald.thion@univ-lyon1.fr",
      "name": "Romuald THION"
    },
    "license": "ISC",
    "type": "module",
    "keywords": [
      "javascript",
      "education",
      "licence",
      "informatique",
      "UCBL"
    ],
    "dependencies": {
      "cross-env": "^7.0.3",
      "dotenv": "^16.3.1"
    },
    "devDependencies": {
      "eslint": "^8.55.0",
      "eslint-config-prettier": "^9.1.0",
      "eslint-plugin-import": "^2.29.1",
      "eslint-plugin-promise": "^6.1.1",
      "eslint-plugin-unicorn": "^50.0.1",
      "jsdoc": "^4.0.2",
      "nodemon": "^3.0.2"
    },
    "prettier": {
      "trailingComma": "all",
      "arrowParens": "always",
      "proseWrap": "preserve",
      "printWidth": 100,
      "bracketSpacing": true,
      "quoteProps": "consistent",
      "tabWidth": 2,
      "semi": true
    },
    "eslintConfig": {
      "env": {
        "es2024": true,
        "browser": true,
        "node": true
      },
      "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
      },
      "plugins": [
        "unicorn"
      ],
      "extends": [
        "eslint:recommended",
        "plugin:unicorn/recommended",
        "plugin:import/recommended",
        "plugin:promise/recommended",
        "prettier"
      ],
      "rules": {
        "no-var": "error",
        "no-unused-vars": [
          "error",
          {
            "argsIgnorePattern": "^_",
            "varsIgnorePattern": "^_"
          }
        ],
        "unicorn/prevent-abbreviations": [
          "error",
          {
            "replacements": {
              "args": false
            }
          }
        ]
      }
    }
  }
  